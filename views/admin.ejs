<section class="bg-white my-4 rounded-4 fw-normal" >
  <!-- trendings -->
  <div class="p-4 row" style="background-color: rgb(15, 15, 15);">
    <!-- Loop through products -->
    <% products.forEach(product => { %>
      <div class="col-3">
        <div class="card mb-3" style="max-width: fit-content;">
          <div class="row g-0">
            <div class="col-md-5">
              <img src="<%= product.bookImage %>" class="img-fluid rounded-start" style="height: 250px;">
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title"><%= product.bookName %></h5>
                <p class="card-text"><%= product.description %></p>
                <p class="card-text">
                  <small class="text-body-secondary">Last updated... <br>
                  <span class="badge <%= product.status === 'complete' ? 'text-bg-success' : 'text-bg-danger' %>">
                    <%= product.status %>
                  </span></small>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</section>
