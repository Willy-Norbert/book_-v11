  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const col1Elements = document.querySelectorAll('.col1');
      const contentSections = document.querySelectorAll('.dynamic-content');
      const defaultContent = document.getElementById('default-content');

      col1Elements.forEach((col) => {
        col.addEventListener('click', (event) => {
          event.preventDefault();

          // Hide all content sections
          contentSections.forEach((section) => {
            section.classList.add('d-none');
          });

          // Show the clicked section
          const contentId = col.getAttribute('data-content-id');
          const contentToShow = document.getElementById(contentId);
          if (contentToShow) {
            contentToShow.classList.remove('d-none');
          }
        });
      });
    });

    document.addEventListener('DOMContentLoaded', () => {
    const loadProductData = () => {
      fetch('/api/products')
        .then((response) => response.json())
        .then((products) => {
          const tableBody = document.getElementById('product-table-body');
          tableBody.innerHTML = ''; // Clear existing rows

          products.forEach((product) => {
            const row = `
              <tr>
                <td>${product.bookImage}</td>
                <td>${product.bookName}</td>
                <td>${product.description}</td>
                <td>${product.status}</td>
              </tr>
            `;
            tableBody.innerHTML += row;
          });
        })
        .catch((error) => {
          console.error('Error loading products:', error);
        });
    };

    // Load data when the "About" section is clicked
    const aboutSection = document.querySelector('[data-content-id="content-about"]');
    aboutSection.addEventListener('click', loadProductData);
  });
  </script>
