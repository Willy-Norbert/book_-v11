<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book Project</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Freckle+Face&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css">
  <link rel="stylesheet" href="css/style1.css">
</head>

<body>
  <div class="p-5 d-flex justify-content-center align-items-center full-height">
    <div class="p-5 " style="background-color: rgb(79, 79, 80);">
      <form action="/admin/products/update/<%= product.ID %>" method="post" class="p-2" enctype="multipart/form-data">
        <h4 class="text-center text-white fw-bold p-2">Update Book</h4>

        <!-- Book Image (Optional, only if user wants to change the image) -->
        <div class="form-outline mb-3">
          <label class="form-label text-white" for="bookImage">Book Image (Leave empty to keep the current
            image)</label>
          <input type="file" name="bookImage" id="bookImage" class="form-control form-control" />
        </div>

        <!-- Book Name -->
        <div class="form-outline mb-3">
          <label class="form-label text-white" for="bookName">Book Name</label>
          <input type="text" name="bookName" id="bookName" class="form-control form-control"
            value="<%= product.bookName %>" required />
        </div>

        <!-- Book Description -->
        <div class="form-outline mb-3">
          <label class="form-label text-white" for="bookDescription">Description</label>
          <textarea name="description" id="bookDescription" class="form-control form-control" rows="4"
            required><%= product.description %></textarea>
        </div>

        <!-- Book Status (Complete or Ongoing) -->
        <div class="form-outline mb-3">
          <label class="form-label text-white" for="bookStatus">Status</label>
          <select name="status" id="bookStatus" class="form-control form-control" required>
            <option value="complete" <% if (product.status==='complete' ) { %>selected<% } %>>Complete</option>
            <option value="ongoing" <% if (product.status==='ongoing' ) { %>selected<% } %>>Ongoing</option>
          </select>
        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-center">
          <button type="submit" id="link-to-another"
            class="btn btn-warning btn-block btn-lg gradient-custom-4 text-body">Update Book</button>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HoA8jb5xOLbZUmtiZWepfYSc3FfD5wsYFCvIoEOwD5fUdo0nMlZo5OfjIjgi9xX5"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
  <script src="script.js"></script>
</body>

</html>